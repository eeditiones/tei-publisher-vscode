{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "selector": "default",
                "format": ["camelCase", "PascalCase", "UPPER_CASE"]
            },
            {
                "selector": "property",
                "format": null,
                "filter": {
                    "regex": "^(Content-Type|Origin)$",
                    "match": true
                }
            }
        ],
        "semi": "off",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn"
    }
}
